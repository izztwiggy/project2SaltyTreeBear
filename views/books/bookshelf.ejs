<div class="container">
    <header class="blog-header py-3">
      <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
            <a class="link-secondary" href="/books/<%= child.id%>/new">Write New Story</a>
        </div>
        <div class="col-4 text-center">
            <% if(!child.preferredName){%>
                <a class="blog-header-logo text-dark" href="#"><%= child.firstName%>'s Bookshelf </a>
            <%}else {%>
                <a class="blog-header-logo text-dark" href="#"><%= child.preferredName%>'s Bookshelf </a>
            <%}%> 
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
          <a class="link-secondary" href="/books/<%= child.id%>/new" aria-label="Search">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"/><path d="M21 21l-5.2-5.2"/></svg>
          </a>
          <a class="btn btn-sm btn-outline-secondary" href="/books/<%= child.id%>/new"> Search & Pin New Book</a>
        </div>
      </div>
    </header>
  
    <div class="nav-scroller py-1 mb-2">
      <nav class="nav d-flex justify-content-between">
        <a class="p-2 link-secondary" href="/books">Switch Child</a>
      </nav>
    </div>
</div>

<% if(books){%>
  <% books.forEach(book => {%>
    <div class="bookshelf">
      <div class="book-grid">
        <ul>
          <li>
            <div class="img" style="background-color: <%= book.cover%>; padding: 2%" >
              <h3 style="box-sizing: border-box; background-color: white;"><%= book.title%></h3>
              <p>By <%= book.author %></p>
              <a class="btn btn-sm btn-success" href="/books/bookshelf/<%=  book.id %>/view">View</a>
            </div>
          </li>
        </ul>
        <div class="shelf-shadows"></div>
        <div class="shelf"></div>
      </div>
    </div>
    <%}) %> 
  <%} %>







<script>
  const bookImgDiv = document.querySelector('.img')
  bookImgDiv.style.backgroundColor = (`${book.cover}`)
  bookImgDiv.addEventListener('click', (e) => {
    
  })
  
</script>